<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/item_home"
        android:layout_width="220dp"
        android:layout_height="192dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bj_rr_home_list_one"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bj_rr_home_list_one"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/ll_home_imageView"
                android:layout_width="220dp"
                android:layout_height="102dp"
                android:background="@drawable/bj_rr_home_list_one"
                android:scaleType="fitXY"
                android:src="@drawable/moni" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="2dp">

                <TextView
                    android:id="@+id/ll_home_name"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26.7dp"
                        android:layout_height="26.7dp"
                        android:src="@drawable/start" />

                    <ImageView
                        android:layout_width="26.7dp"
                        android:layout_height="26.7dp"
                        android:src="@drawable/start" />

                    <ImageView
                        android:layout_width="26.7dp"
                        android:layout_height="26.7dp"
                        android:src="@drawable/start" />

                    <ImageView
                        android:layout_width="26.7dp"
                        android:layout_height="26.7dp"
                        android:src="@drawable/start" />

                    <ImageView
                        android:layout_width="26.7dp"
                        android:layout_height="26.7dp"
                        android:src="@drawable/start" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/openStart"
                    android:layout_width="39.17dp"
                    android:layout_height="39.17dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/Bopen"
                    android:gravity="center"
                    android:text="Open"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
<!--                <Button-->
<!--                    android:id="@+id/openStart"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Open"-->
<!--                    android:textSize="15sp"-->
<!--                    android:padding="0dp"-->
<!--                    android:background="@color/Bopen"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:onClick="onButtonClick"/>-->
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>